{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "plugins": ["dollar-sign"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [ 1, {
      "js": "always", "json": "always"}],
    "dollar-sign/dollar-sign": [2, "ignoreProperties"],
    "prefer-destructuring": ["error", {"object": true, "array": false}]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}